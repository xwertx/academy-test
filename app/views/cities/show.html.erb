<%= link_to("<< Back to List", {:action => 'index'}, :class => 'back-link') %>

<div class="cities show">
  <h2>Show City</h2>

  <table summary="City detail view">
    <tr>
      <th>ID</th>
      <td><%= @city.id %></td>
    </tr>
    <tr>
      <th>Name</th>
      <td><%= @city.cities_name %></td>
    </tr>
    <tr>
      <th>Short</th>
      <td><%= @city.short_name %></td>
    </tr>
    <tr>
      <th>Created</th>
      <td><%= @city.created_at %></td>
    </tr>
    <tr>
      <th>Updated</th>
      <td><%= @city.updated_at %></td>
    </tr>
  </table>

</div>
