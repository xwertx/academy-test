<div class="cities index">
  <h2>Cities</h2>

  <%= link_to("Add New City", {:action => 'new'}, :class => 'action new') %>

<table class="listing" summary="City list">
    <tr class="header">
      <th>City</th>
      <th>Short</th>
      <th>Action</th>
    </tr>
    <% @cities.each do |city| %>
    <tr>
      <td><%= city.cities_name %></td>
      <td><%= city.short_name %></td>
      <td class="actions">
        <%= link_to("Show", {:action => 'show', :id => city.id}, :class => 'action show') %>
      </td>
    </tr>
    <% end %>
  </table>

<%= will_paginate @cities %>

</div>
